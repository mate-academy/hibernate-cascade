<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_2.xsd.jcp.org/xml/ns/persistence_2_2.xsd">
    <!-- Define persistence unit -->
    <persistence-unit name="mate.academy.ticket_app">
        <description>Hibernate EntityManager Demo</description>
        <class>core.basesyntax.model.Comment</class>
        <class>core.basesyntax.model.Smile</class>
        <class>core.basesyntax.model.Message</class>
        <class>core.basesyntax.model.MessageDetails</class>
        <class>core.basesyntax.model.User</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL55Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/ticket_app?serverTimeZone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="!Qaz2wsx3edc"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>